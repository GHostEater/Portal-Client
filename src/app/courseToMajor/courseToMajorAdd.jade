.modal-header
  h3.modal-title Add Course To {{vm.major.name}}
.modal-body
  div(ng-show="vm.courseSelect == 0")
    .row.content
      form.content.col-sm-4
        input.form-control(type="text" placeholder="Search" ng-model="vm.searchTerm")
    .table-responsive
      table.table.table-striped.table-condensed
        thead
          th Course Code
          th Course Title
          th Unit
          th Action
        tbody
          tr(ng-repeat="course in vm.courses | orderBy:'+code' | filter:vm.searchTerm")
            td {{course.code}}
            td {{course.title}}
            td {{course.unit}}
            td
              button.btn.btn-xs.btn-primary(ng-click="vm.selectCourse(course.id)") Select
  div(ng-show="vm.courseSelect == 1")
    h4 Selected Course: {{vm.course.code}} {{vm.course.title}}
    button.btn.btn-danger(ng-click="vm.deSelectCourse()") Remove Selection
    select.form-control(ng-model='vm.level' required ng-options="level as level.level for level in vm.levels track by level.id")
      option(value='') Select Level
.modal-footer(ng-show="vm.level")
  button.btn.btn-primary(ng-click="vm.ok()") Confirm
  button.btn.btn-default(ng-click="$dismiss()") Cancel
