div(ng-controller='StudentUploadCtrl as vm')
    csv-upload(ng-model='vm.students')
    div(ng-show='vm.students')
      .table-responsive
        table.table.table-bordered
          thead
            th Name
            th Registration No
            th Date of Birth
            th E-Mail
            th Gender
            th Major
            th Level
            th Mode of Entry
          tbody
            tr(ng-repeat='student in vm.students.data | limitTo: vm.students.data.length - 1')
              td {{student[1]}}, {{student[2]}} {{student[3]}}
              td {{student[0] | matricNo}}
              td {{student[4]}}
              td {{student[5]}}
              td {{student[6]}}
              td {{student[7]}}
              td {{student[8]}}
              td {{student[9]}}
        button.btn.btn-primary(ng-click='vm.uploadStudents()') Upload Students
