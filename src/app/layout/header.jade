nav.navbar.navbar-inverse.navbar-fixed-top(ng-controller="HeaderController as vm").hidden-print
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/') Portal
        #navbar.navbar-collapse.collapse
            form.navbar-form.navbar-right
              div(ng-show="vm.user.loggedIn")
                span Hello {{vm.user.last_name | uppercase}}, {{vm.user.first_name}}&nbsp
                span(ng-show="vm.user.student") {{vm.user.student.level}} Level
                a.btn.btn-xs.btn-danger(ng-click="vm.logOut()") Logout
