div(ng-controller="CourseReviewCtrl as vm")
  table.table.table-striped.table-bordered.table-condensed
    thead
      th Course
      th Action
    tbody
      tr(ng-repeat="course in vm.courses | orderBy: '+code'")
        td {{course.course.code}} {{course.course.title}}
        td
          button.btn.btn-sm.btn-primary(ng-click="vm.review(course.course)") Evaluate Lecturer
